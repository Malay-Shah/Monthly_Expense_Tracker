<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        android:id="@+id/bAddExpenseActivity"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:width="200dp"
        android:onClick="goToAddExpense" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Expenses"
        android:id="@+id/bViewExpenseActivity"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/bAddExpenseActivity"
        android:layout_alignLeft="@+id/bAddExpenseActivity"
        android:layout_alignStart="@+id/bAddExpenseActivity"
        android:width="200dp"
        android:onClick="goToViewExpense" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button4"
        android:layout_below="@+id/bViewExpenseActivity"
        android:layout_alignLeft="@+id/bViewExpenseActivity"
        android:layout_alignStart="@+id/bViewExpenseActivity"
        android:layout_marginTop="28dp"
        android:width="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="28dp"
        android:width="200dp" />
</RelativeLayout>
